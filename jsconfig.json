{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonJS",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true, 
    "baseUrl": "."
  },
  "paths": {
    "*": ["node_modules/*", "types/*"]
  },
  "include": ["libs","deps/**/*"],
  "exclude": ["node_modules", "tmp"]
}